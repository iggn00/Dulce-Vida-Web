{
  "info": {
    "name": "Dulce Vida API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección básica para autenticación, boletas y carrito."
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [ {"key": "Content-Type", "value": "application/json"} ],
        "url": {"raw": "http://localhost:8080/auth/login", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["auth","login"]},
        "body": {"mode": "raw", "raw": "{\n  \"email\": \"admin@dulcevida.cl\",\n  \"password\": \"admin123\"\n}"}
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [ {"key": "Content-Type", "value": "application/json"} ],
        "url": {"raw": "http://localhost:8080/auth/refresh", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["auth","refresh"]},
        "body": {"mode": "raw", "raw": "{\n  \"refreshToken\": \"PASTE_REFRESH_TOKEN\"\n}"}
      }
    },
    {
      "name": "Historial Boletas (Cliente)",
      "request": {
        "method": "GET",
        "header": [ {"key": "Authorization", "value": "Bearer {{token}}"} ],
        "url": {"raw": "http://localhost:8080/api/boletas/mias?page=0&size=5", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","boletas","mias"], "query": [ {"key": "page", "value": "0"}, {"key": "size", "value": "5"} ] }
      }
    },
    {
      "name": "Historial Boletas (Admin)",
      "request": {
        "method": "GET",
        "header": [ {"key": "Authorization", "value": "Bearer {{token}}"} ],
        "url": {"raw": "http://localhost:8080/api/boletas/admin?page=0&size=10", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","boletas","admin"], "query": [ {"key": "page", "value": "0"}, {"key": "size", "value": "10"} ] }
      }
    },
    {
      "name": "Checkout Carrito",
      "request": {
        "method": "POST",
        "header": [ {"key": "Authorization", "value": "Bearer {{token}}"} ],
        "url": {"raw": "http://localhost:8080/api/cart/checkout", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","cart","checkout"]},
        "body": {"mode": "raw", "raw": "{}"}
      }
    }
  ],
  "variable": [
    {"key": "token", "value": "PASTE_JWT_TOKEN"}
  ]
}